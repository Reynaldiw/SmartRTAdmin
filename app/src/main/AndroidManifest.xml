<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reynaldiwijaya.smartrtadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Ui.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.UserConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.StoreConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.NewsConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".View.AgendaConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.ReportActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.DetailAgendaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.DetailUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Ui.DetailReportActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.DetailNewsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.DetailStoreActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Ui.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>