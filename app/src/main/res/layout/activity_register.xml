<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_selected_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_selectphoto"
                android:text="Selected Photo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                app:civ_border_width="4dp" />

        </RelativeLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_namaLengkap"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input Nama Lengkap"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/no_KTP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input No KTP"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input Alamat"
            android:inputType="textAutoComplete"
            android:maxLines="6"
            android:singleLine="false"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input Status"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/ib_date"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_date_range_white_24dp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:text="Tanggal Lahir"
                android:textSize="16sp"
                android:textColor="#fff"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jenis_kelamin"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <RadioGroup
            android:id="@+id/rg_jenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rb_laki2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Laki-laki"
                android:textColor="#fff"/>

            <RadioButton
                android:id="@+id/rb_perempuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perempuan"
                android:textColor="#fff"/>

        </RadioGroup>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/profesi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input Profesi"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_noTelp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input No.Telp"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_margin="8dp"
            android:textColor="#fff"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input Email"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/butt_putih"
            android:hint="Input Username"
            android:inputType="textAutoComplete"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:padding="8dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/butt_putih"
                android:hint="Input Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHighlight="@color/colorPrimary"
                android:textSize="14sp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawablePadding="20dp"
                android:padding="8dp"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Jabatan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="#fff"/>

       <Spinner
           android:id="@+id/spinner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="5dp"
           android:background="@drawable/butt_putih"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/butt_putih"
            android:text="@string/send"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:text="Already have an account ?"
                android:textSize="17sp"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:text="Sign in."
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>